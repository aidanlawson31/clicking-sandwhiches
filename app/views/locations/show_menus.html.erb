<div class="container">
  <h1> Add Menus To <%= @location.name %></h1>
  <%= simple_form_for :location_menus, url: add_menu_location_path(@location.id), method: :post do |f| %>
    <% unless @menus.empty? %>
    <div class="row row-cols-5">
      <% @menus.each do |menu| %>

      

        <div class="card col" style="width: 18rem; margin: 0.5rem;">
          <div class="card-body">
            <div class="row">
              <h5 class="card-title"><%= menu.display_name %></h5>
            </div> 
            <div class="row">
              <p><%= menu.internal_name %></p>
            </div>

            <% unless @location_menus_names.include?(menu.display_name) %>

              <%= f.hidden_field :added_menu, value: menu.id %>
              <%= f.button :submit, "Add Menu", class: "btn btn-primary" %>

            <% else %>

              <p>Display Name Taken </p>

            <% end %>
          </div>
        </div>


      <% end %>
    </div>
    <% else %>
      <p> You have no menus available to choose from. <p>
      <%= link_to "Create Menu", new_menu_path, class: "btn btn-primary" %>
    <% end %>
  <% end %>

  <%= link_to "Back to #{@location.name}", location_path(@location), class: "btn btn-primary btn-sm" %>
</div>
