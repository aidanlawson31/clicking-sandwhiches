<div class="container">
  <h1> Add Menus To <%= @location.name %></h1>
    <% unless @menus.empty? %>

    <div class="row row-cols-5" id="locations-menus">
      <%= render 'add_menus'%>
    </div>  

    <% else %>
      <p> You have no menus available to choose from. <p>
      <%= link_to "Create Menu", new_business_menu_path(current_business), class: "btn btn-primary btn-sm" %>
    <% end %>

  <%= link_to "Back to #{@location.name}", business_location_path(current_business, @location), class: "btn btn-primary btn-sm" %>
</div>
