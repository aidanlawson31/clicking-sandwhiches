
<div class="col">
  <%= render 'partials/dashboard_nav' %>
</div>
<div class="col">
<%= simple_form_for @location do |f| %>
  <div class="show container">
    <div class="row">
      <h1 class="show-header"><%= f.input :name, placeholder: @location.name %></h1>
    </div>
    <hr/>

    <div class="row">
      <h4><%= f.input :address, placeholder: @location.address %></h4>
    </div>
    <%= link_to "back", locations_path %>
    <%= f.button :submit, class: "btn btn-primary" %>
    <%= link_to "Delete Location", location_path(@location), method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure you want to delete this location?'} %>
  </div>
<% end %>
<div class="col">
  <div class="show container">
    <div class="row">
      <h1 class="show-header"><h1> <%= @location.name %> Menus </h1>
    </div>
    <%= link_to "Create a new menu", new_menu_path, class: "btn btn-primary" %>
    <% if @menus.present? %>
      <%= link_to "Add existing menu", show_menus_location_path, class: "btn btn-primary" %>
    <% end %>
    <% unless @location.location_menus.empty? %>
    <div class="row row-cols-5">
      <% @location.location_menus.each do |location_menu| %>
          <div class="card col" style="width: 18rem; margin: 0.5rem;">
            <div class="card-body">
              <div class="row">
                <h5 class="card-title"><%= location_menu.menu.name %></h5>
              </div> 
              <%= link_to "View Menu", menu_path(location_menu.menu), class: "btn btn-danger" %>
            </div>
          </div>
      <% end %>
    </div>
    <% else %>
      <p> You have no menus <p>
    <% end %>
  <div>
</div>
