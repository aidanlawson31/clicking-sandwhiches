<div class="col">
<%= simple_form_for @location do |f| %>
  <div class="show container">
    <div class="row">
      <h1 class="show-header"><%= f.input :name, placeholder: @location.name %></h1>
    </div>
    <hr/>
    <div class="row">
      <h4><%= f.input :address, placeholder: @location.address %></h4>
    </div>
    <%= link_to "back", locations_path %>
    <%= f.button :submit, class: "btn btn-primary" %>
    <%= link_to "Delete Location", location_path(@location), method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure you want to delete this location?'} %>
  </div>
<% end %>
<div class="col">
  <div class="show container">
    <div class="row">
      <h1 class="show-header"><h1> <%= @location.name %> Menus </h1>
    </div>
    <% if @menus.present? %>
      <%= link_to "Add existing menu", show_menus_location_path, class: "btn btn-primary" %>
    <% end %>
    <% unless @location.location_menus.empty? %>
    <div class="row row-cols-5">
      <% @location.location_menus.each do |location_menu| %>
          <div class="card col" style="width: 18rem; margin: 0.5rem;">
            <div class="card-body">
              <div class="row">
                <h5 class="card-title"><%= location_menu.menu.name %></h5>
              </div> 
              <%= link_to "View Menu",   menu_path(location_menu.menu), class: "btn btn-primary" %>
              <%= link_to "Remove Menu", remove_menu_location_path(location_menu:location_menu.id), method: :delete, class: "btn btn-danger" %> 
            </div>
          </div>
      <% end %>
    </div>
    <% else %>
      <p> You have no menus <p>
    <% end %>
  <div>
</div>
<div class="row">
  <h1><%= @location.name %> Images </h1>
</div>
<%= simple_form_for @location_image, url: add_image_location_path do |f| %>
  <div class="row">
    <%= f.file_field :image, accept: 'image/png,image/jpeg' %>
  </div>
  <%= f.hidden_field :display_sequence_number, value: 1 %>
  <div class="row" style="padding-top: 10px;">
    <%= f.button :submit, "Upload Image", class:"btn btn-primary" %>
  </div>
<% end %>
</div>
<div class="row">
  <% @location.location_images.each do |location_image| %>
    <% if location_image.image.attached? %>
      <%= image_tag location_image.sized_image %>
      <%= link_to "Delete Image", remove_image_location_path(location_image: location_image.id), method: :delete %>
    <% end %>
  <% end %>
</div>
