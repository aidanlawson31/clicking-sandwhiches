<h1> Sort the order of your menu items </h1>

<% if @category.menu_items.exists? %>
  <%= simple_form_for @category, url: save_sort_category_menu_items_menu_category_path do |f| %>
    <table class="table">
      <tbody id="menu-items-list">
        <%= f.simple_fields_for :menu_items, wrapper: false do |menu_item_form| %>
          <tr class="nested-fields">
            <td>
              <%= image_tag "updown" %>
              <%= menu_item_form.hidden_field :display_sequence_number, class: 'display_sequence_number' %>
            </td>
            <td>
              <p>Code</p>
              <%= menu_item_form.text_field :code %>
            </td>
            <td>
              <p>Name</p>
              <%= menu_item_form.text_field :name %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="row" style="padding-left:10%;">
    <%= f.button :submit, class: "btn btn-primary btn-sm" %>
  <% end %>
<% else %>
  <p>You have no menu items in this category</p>
<% end %>
<%= link_to "back to menu", menu_path(@category.menu), class: "btn btn-primary btn-sm", style: "margin-left: 5px;" %>
</div>