<div class="container">
  <h1> Sort the order of your categories </h1>

  <% if @menu.categories.exists? %>
    <%= simple_form_for @menu, url: save_sort_menu_categories_business_menu_path do |f| %>
      <table class="table">
        <tbody id="categories-list">
          <%= f.simple_fields_for :categories, wrapper: false do |category_form| %>
            <tr class="nested-fields">
              <td>
                <%= image_tag "updown" %>
                <%= category_form.hidden_field :display_sequence_number, class: 'display_sequence_number' %>
              </td>
              <td>
                <p>Name</p>
                <%= category_form.text_field :name %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="row" style="padding-left: 10%;">
      <%= f.button :submit, class: "btn btn-primary btn-sm", data: { disable_with: "Saving..." } %>
    <% end %>
  <% else %>
    <p>You have no menu items in this category</p>
  <% end %>
    <%= link_to "back to menu", business_menu_path(current_business, @menu), class: "btn btn-primary btn-sm", style: "margin-left: 5px;"%>
  </div>
</div>