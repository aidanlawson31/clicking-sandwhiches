<h1> Sort the order of your categories </h1>

<%= simple_form_for @menu, url: save_sort_menu_categories_menu_path do |f| %>
  <table class="table">
    <tbody id="categories-list">
      <%= f.simple_fields_for :categories, wrapper: false do |category_form| %>
        <tr class="nested-fields">
          <td>
            <%= category_form.hidden_field :display_sequence_number, class: 'display_sequence_number' %>
          </td>
          <td>
            <p>Name</p>
            <%= category_form.text_field :name %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
